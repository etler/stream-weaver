{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable", "DOM.AsyncIterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "jsxImportSource": "stream-weaver",
    "baseUrl": ".",
    "paths": {
      "stream-weaver": ["../src/index.ts"],
      "stream-weaver/jsx-runtime": ["../src/jsx/jsx-runtime.ts"],
      "stream-weaver/jsx-dev-runtime": ["../src/jsx/jsx-dev-runtime.ts"],
      "stream-weaver/client": ["../src/client/ClientWeaver.ts"],
      "stream-weaver/polyfills": ["../src/polyfills/readableStreamFrom.ts"],
      "@/*": ["../src/*"]
    }
  },
  "include": ["src/**/*", "server/**/*", "*.ts"],
  "exclude": ["node_modules", "dist"]
}
